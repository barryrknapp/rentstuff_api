<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
	<changeSet id="update-rental-item-image-table"
		author="bknapp">
		<dropColumn tableName="rental_item_image" columnName="IMAGE_URL" />
		<addColumn tableName="rental_item_image">
			<column name="image_data" type="BYTEA" />
			<column name="content_type" type="VARCHAR(50)"
				defaultValue="image/jpeg">
				<constraints nullable="false" />
			</column>
		</addColumn>
	</changeSet>

</databaseChangeLog>